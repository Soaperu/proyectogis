<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SigcatminProAddin.View.Modulos"       
      xmlns:extensions="clr-namespace:ArcGIS.Desktop.Extensions;assembly=ArcGIS.Desktop.Extensions"
      xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
      xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" x:Class="SigcatminProAddin.View.Modulos.MantoAreaRestringida"
      mc:Ignorable="d"
      d:DesignHeight="470" d:DesignWidth="680"
      Title="Mantenimiento de Areas Reservadas"
      FontFamily="Roboto" Loaded="Page_Loaded">

    <Grid Margin="0,0,0,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="316"/>
            <RowDefinition Height="97"/>
            

        </Grid.RowDefinitions>
        <Grid VerticalAlignment="Center" Height="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70*"/>
                <ColumnDefinition Width="30*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Mantenimiento | Áreas Restringidas.." Grid.Row="0" Grid.Column="0"
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,0"
                   VerticalAlignment="Bottom" Foreground="#006DA0" FontFamily="Roboto"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,0" VerticalAlignment="Center"
                        Grid.Column="1" HorizontalAlignment="Right">
                <TextBlock Text="Administrador01" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                           FontSize="10" Margin="0,0,5,0" x:Name="CurrentUserLabel" Foreground="#FF696969"/>
                <Image Source="/SigcatminProAddin;component/Images/EvaluacionDM/usuario32.png"
                       Width="20" Height="20" VerticalAlignment="Center"/>
            </StackPanel>

        </Grid>

        <TabControl x:Name="MiTabControl" Grid.Row="2" Margin="0,0,0,10" 
                    Grid.RowSpan="2" SelectionChanged="MiTabControl_SelectionChanged" >
            <TabItem Header="Procesamiento" Height="20" VerticalAlignment="Bottom">

                <Grid Background="#FFE5E5E5" Grid.Column="0" Grid.Row="0" Height="353">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="200"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="190"/>
                            <ColumnDefinition Width="190"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="Resultados de Búsqueda" Foreground="#FF696969"
                        FontWeight="Bold" FontSize="10" VerticalAlignment="Center"
                           Padding="0,0,0,0" x:Name="LblCountRecords" 
                           Height="15" Grid.ColumnSpan="2"/>
                        <ComboBox Margin="0,0,0,0" Grid.Column="1"  Width="150"
                        x:Name="CbxUsuario" FontSize="10"
                        Height="20" Padding="2,0,0,0" SelectionChanged="CbxUsuario_SelectionChanged" Loaded="CbxUsuario_Loaded"  />
                        <ComboBox Margin="0,0,0,0" Grid.Column="2"
                        x:Name="CbxFiltro" FontSize="10" Width="150"
                        Height="20" Padding="0,0,0,0" SelectionChanged="CbxFiltro_SelectionChanged" Loaded="CbxFiltro_Loaded" />
                        <Button Content="Aplicar" Width="80" Height="20" 
                        Background="#006DA0" BorderBrush="White"
                        Foreground="White" Grid.Column="3" HorizontalAlignment="Left"
                        Style="{DynamicResource Esri_Button}" VerticalAlignment="Center" 
                        HorizontalContentAlignment="Center" FontFamily="Roboto"
                        VerticalContentAlignment="Center" x:Name="btnAplicar" 
                        FontSize="10" FontWeight="bold" Padding="0,0,0,0"  />
                    </Grid>
                    <Grid Grid.Row="1" Grid.ColumnSpan="5" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <dxg:GridControl FontSize="10" x:Name="DataGridResult" 
                                   CustomUnboundColumnData="DataGridResult_CustomUnboundColumnData">
                            <dxg:GridControl.View>
                                <dxg:TableView  x:Name="DataGridResultTableView" ShowAutoFilterRow="False"
                                    AllowColumnFiltering="False"
                                    ShowGroupPanel="False" 
                                    FocusedRowChanged="DataGridResultTableView_FocusedRowChanged" 
                                    RowUpdated="DataGridResultTableView_RowUpdated" 
                                    HorizontalAlignment="Left" Width="656" Margin="0,0,0,-55" />
                            </dxg:GridControl.View>
                        </dxg:GridControl>
                    </Grid>
                    <Grid Grid.Row="2"  Margin="0,0,0,0" Grid.ColumnSpan="5" Grid.RowSpan="5" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="223*"/>
                            <ColumnDefinition Width="105*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Height="50"  VerticalAlignment="Center" Width="655" 
                                 VerticalContentAlignment="Center" HorizontalAlignment="Left"
                        x:Name="TbxDetalleAre" FontSize="10" Padding="5,0,0,0"
                                 Background="AliceBlue" Grid.ColumnSpan="2"/>
                    </Grid>

                    <Grid Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="130"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox Margin="10,7,10,3" Width="110"
                            x:Name="CbxDatum" FontSize="10"
                            Height="20" Padding="5,0,0,0" SelectionChanged="CbxDatum_SelectionChanged" />
                        <ComboBox Margin="10,7,10,3" Width="110"
                            x:Name="CbxZona" FontSize="10"
                            Height="20" Padding="5,0,0,0"  Grid.Column="1" SelectionChanged="CbxZona_SelectionChanged" />
                        <Button Content="Planos" Width="110" Height="20" Background="#006DA0" BorderBrush="White"
                            Foreground="White" Grid.Column="2" HorizontalAlignment="Left"
                            Style="{DynamicResource Esri_Button}" VerticalAlignment="Center" 
                            HorizontalContentAlignment="Center" FontFamily="Roboto"
                            VerticalContentAlignment="Center" x:Name="btnPlano" FontSize="10" 
                            FontWeight="Medium" Padding="0,0,0,0" />
                        <Button Content="Remove all layers" Width="110" Height="20" Background="#006DA0" BorderBrush="White"
                            Foreground="White" Grid.Column="3" HorizontalAlignment="Center"
                            Style="{DynamicResource Esri_Button}" VerticalAlignment="Center" 
                            HorizontalContentAlignment="Center" FontFamily="Roboto" 
                            VerticalContentAlignment="Center" x:Name="btnRemoveLayer" FontSize="10" FontWeight="Medium" Padding="0,0,0,0" />
                        <Button Content="Visualizar" Width="110" Height="20" Background="#006DA0" BorderBrush="White"
                            Foreground="White" Grid.Column="4" HorizontalAlignment="Center"
                            Style="{DynamicResource Esri_Button}" VerticalAlignment="Center" 
                            HorizontalContentAlignment="Center" FontFamily="Roboto" 
                            VerticalContentAlignment="Center" x:Name="btnVizualizar" FontSize="10" 
                                FontWeight="bold" Padding="0,0,0,0"  />
                    </Grid>


                </Grid>

            </TabItem>
            <TabItem Header="Control de registros" HorizontalAlignment="Center" Width="130">

                <Grid Background="#FFE5E5E5" Grid.Column="0" Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="150"/>

                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Grid.ColumnSpan="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="15.972"/>
                            <ColumnDefinition Width="15.432"/>
                            <ColumnDefinition Width="268.596"/>
                            <ColumnDefinition Width="190"/>
                            <ColumnDefinition Width="190"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox Margin="15,2,25,3" Grid.Column="4"
                        x:Name="CbxFiltroControlReg" FontSize="10" Width="150"
                        Height="20" Padding="0,0,0,0" SelectionChanged="CbxFiltroControlReg_SelectionChanged" />
                    </Grid>

                    <Grid Grid.Row="1" Grid.ColumnSpan="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="190"/>
                            <ColumnDefinition Width="190"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Registros en Feature Class Temporales" Foreground="#FF696969"
                            FontWeight="Bold" FontSize="10" VerticalAlignment="Center" 
                            Padding="0,0,0,0" Height="14"/>
                    </Grid>


                    <Grid Grid.Row="2" Grid.ColumnSpan="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <dxg:GridControl FontSize="12" 
                            x:Name="DGridRegistroTmp"  Height="50"
                            RenderTransformOrigin="0.302,0.964" 
                            HorizontalAlignment="Left" 
                            Width="659">
                            <dxg:GridControl.View>
                                <dxg:TableView  x:Name="DGridRegistroTmpTableView" 
                                    ShowAutoFilterRow="False"
                                    AllowColumnFiltering="False"
                                    ShowGroupPanel="False" 
                                    Margin="0,-14,0,14" />
                            </dxg:GridControl.View>
                        </dxg:GridControl>
                    </Grid>
                    <Grid Grid.Row="3" Grid.ColumnSpan="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="190"/>
                            <ColumnDefinition Width="190"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Registros en Feature Class Producción" Foreground="#FF696969"
                            FontWeight="Bold" FontSize="10" VerticalAlignment="Center" 
                            Padding="0,0,0,0" Height="14"/>
                    </Grid>
                    <Grid Grid.Row="4" Grid.ColumnSpan="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <dxg:GridControl FontSize="12" 
                            x:Name="DGridRegistroProd" 
                            RenderTransformOrigin="0.302,0.964" HorizontalAlignment="Left" Width="659">
                            <dxg:GridControl.View>
                                <dxg:TableView  x:Name="DGridRegistroProdTableView" 
                                    ShowAutoFilterRow="False"
                                    AllowColumnFiltering="False"
                                    ShowGroupPanel="False" 
                                    Margin="0,0,0,0" />
                            </dxg:GridControl.View>
                        </dxg:GridControl>
                    </Grid>
                    <Grid Grid.Row="5" Grid.ColumnSpan="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="190"/>
                            <ColumnDefinition Width="190"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="Resultados de Búsqueda" Foreground="#FF696969"
                            FontWeight="Bold" FontSize="10" VerticalAlignment="Center" 
                            Padding="0,0,0,0"
                            x:Name="L1blCountRecords" Height="14"/>
                        <ComboBox Margin="0,0,20,0" Width="150"
                            x:Name="CbxEnv" FontSize="10" Grid.Column="1"
                            Height="20" Padding="2,0,0,0" RenderTransformOrigin="0.507,0.805" SelectionChanged="CbxEnv_SelectionChanged" />
                        <ComboBox Margin="0,0,20,0" Grid.Column="2"
                            x:Name="CbxFeatures" FontSize="10" Width="150"
                            Height="20" Padding="0,0,0,0" SelectionChanged="CbxFeatures_SelectionChanged" />
                    </Grid>
                    <Grid Grid.Row="6" Grid.ColumnSpan="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <dxg:GridControl FontSize="12" 
                               x:Name="DGridDifRegistro" 
                               RenderTransformOrigin="0.302,0.964" HorizontalAlignment="Left" Width="659">
                            <dxg:GridControl.View>
                                <dxg:TableView  x:Name="DGridDifRegistroTableView2" 
                                    ShowAutoFilterRow="False"
                                    AllowColumnFiltering="False"
                                    ShowGroupPanel="False" 
                                    Margin="0,0,0,0" />
                            </dxg:GridControl.View>
                        </dxg:GridControl>
                    </Grid>
                </Grid>


            </TabItem>
            <TabItem Header="Histórico">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Editar Registros">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Auxiliares">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Histórico">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Configuración">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>










    </Grid>
</Page>
